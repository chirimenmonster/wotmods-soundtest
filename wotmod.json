{
    "package":  "${package}",
    "sources":  [
        {
            "method":   "apply",
            "root":     "",
            "reldir":   "",
            "files":    [ "meta.xml" ]
        },
        {
            "method":   "python",
            "root":     "res",
            "reldir":   "scripts/client/gui/mods",
            "include":  "\\.py$$",
            "exclude":  "modsettings\\.py$$",
            "dirs":     [ "python" ]
        },
        {
            "method":   "apply+python",
            "root":     "res",
            "reldir":   "scripts/client/gui/mods/soundtest",
            "files":    [ "python/soundtest/modsettings.py" ]
        },
        {
            "method":   "plain",
            "root":     "res",
            "reldir":   "gui/flash",
            "files":    [ "as3/SelectorView/bin/SelectorView.swf" ]
        }
    ]
}
